[user]
  name = Matthew Erhard
  email = merhard@gmail.com
[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
  list-branches = branch -v --sort=committerdate
  lbr = list-branches
  delete-merged-branches = !git branch -v | grep -e '\\[gone\\]' | grep -v -e 'master' -e '\\*' | awk '{ print $1 }' | xargs -n 1 git branch -D
  dmbr = delete-merged-branches
[core]
  editor = vim
  autocrlf = input
  excludesfile = ~/.gitignore_global
[color]
  ui = true
[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true
[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true
[credential]
  helper = osxkeychain
[push]
  default = simple
[rerere]
  enabled = true
[merge]
  ff = only
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = .gitconfig-local
